generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Project {
  id          String   @id @default(cuid())
  title       String
  description String
  techStack   String[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Experience {
  id          String   @id @default(cuid())
  company     String
  position    String
  period      String
  description String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Reservation {
  id        String   @id @default(cuid())
  name      String
  email     String
  date      DateTime
  message   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

